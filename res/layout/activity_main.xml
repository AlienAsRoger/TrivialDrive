            <!--Gold-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <Button
                    android:id="@+id/goldMonthBtn"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@android:color/holo_blue_dark"
                    android:text="Gold month"
                    />

                <Button
                    android:id="@+id/goldYearBtn"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Gold year"
                    android:textColor="@android:color/holo_blue_dark"
                    />

            </LinearLayout>

            <!--Platinum-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <Button
                    android:id="@+id/platinumMonthBtn"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Platinum month"
                    android:background="@android:color/darker_gray"
                    />

                <Button
                    android:id="@+id/platinumYearBtn"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Platinum year"
                    android:background="@android:color/darker_gray"
                    />

            </LinearLayout>

            <!--Diamond-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
